<div class="main-container d-flex">
  <div class="sidebar" id="side-nav">
    <div class="header-box px-3 py-5">
      <h1 class="fs-4"><span class="bg-white text-dark rounded shadow px-2 me-2">
          PL</span><span class="text-white">Connect</span> </h1>
      <button class="btn d-md-none d-block close-btn  text-white"><i class="fa-sharp fa-solid fa-bars"></i></button>
    </div>
    <ul class="icon-links list-unstyled px-4 pt-3 pb-4">
      <li class="d-block">
        <%= link_to root_path do %>
        <i class="fa-solid fa-house me-3 text-white"></i>Home
        <% end %>
      </li>
      <li class="mt-3 d-flex justify-content-between d-block">
        <%= link_to root_path do %>
        <%= fa_icon "envelope", text: 'Message', class: 'me-2 text-white' %>
        <% end %>
        <span class="dot rounded-circle text-white py-8 px-2 bg-success">2</span>
      </li>
    </ul>
    <hr class="h-color mx-2">
    <ul class="list-unstyled px-4 pt-3 pb-4">
      <li class="mt-3 d-flex justify-content-between d-block">
        <%= link_to root_path do %>
        <i class="fa-solid fa-bars text-white me-3"></i>Settings
        <% end %>
      </li>
      <li class="mt-3 d-flex justify-content-between d-block">
        <%= link_to do %>
        <%= fa_icon "heart", text: "My Likes", class: "fa-solid me-2" %>
        <% end %>
        <span class="dot rounded-circle text-white py-8 px-2 bg-success">5</span>
      </li>
      <li></li>
    </ul>
    <div class="log-out-btn btn btn-outline-secondary text-white mx-4 w-75 ">
      <%= link_to 'Log Out', :class => "btn" %>
    </div>
  </div>
  <div class="content">
    <div class="container">
      <div class="row header-profile">
        <div class="col-sm-4">
          <div class="profile-image">
            <%= image_tag "bg-image.jpg", :alt => "bg-image", class: 'card-img-top profile-image' %>
          </div>
        </div>
        <div class="col-sm-8">
          <div class="profile-details">
            <h1 class="">Dennis Akagha</h1>
            <button class="mt-3 p-2">UPDATE PROFILE</button>
          </div>
        </div>
        <hr class="underline my-3">
      </div>
    </div>
  </div>

</div>