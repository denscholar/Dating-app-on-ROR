<div class='flex'>
  <div class='col-md-6 flex-item'>
    <%= image_tag "bg-image.jpg", :alt => "bg-image", class: 'w-100 h-100' %>
  </div>
  <div class='col-md-6 flex-item form'>
   <%= render 'devise/shared/alert' %>    
  <p class='title'>Forgot your password?</p>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= bootstrap_devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group mt-3">
    <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>
  </div>
</div>


